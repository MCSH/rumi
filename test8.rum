HiParseRule: struct{}

HiParseRule.parse := (c: *Compiler, s: *Source, pos: int)->*ParseResult{
  idp := c.getIdParser();

  id := idp.parse(c, s, pos);

  if(id){
    ids := id.getId();
    if(!streq(ids, "hi")){
      id = 0 -> *ParseResult;
    }
  }

  return id;
}

HiParseRule.genAST := (c: *Compiler, token: *ParseResult) -> *C_AST{
  fcall := c.createFCallStmt();
  fcall.setId("printf");
  s := c.createCString();
  s.setValue("hello, world! from many levels deep!\n");
  fcall.addArg(s);
  return fcall;
}

ComplexRule: struct{}

ComplexRule.genAST := (c: *Compiler, token: *ParseResult) -> *C_AST{
  fcall := c.createFCallStmt();
  fcall.setId("printf");
  s := c.createCString();
  id :*CP_IdParser_ParseResult = token;
  v :*u8 = id.getId();
  //v = v + 3;
  v = strcat(strcat("You defined ", v), "\n");
  s.setValue(v);
  fcall.addArg(s);
  return fcall;
}

ComplexRule.parse := (c: *Compiler, s: *Source, pos: int)->*ParseResult{
  idp := c.getIdParser();

  hikeyword := idp.parse(c, s, pos);
  id := idp.parseAfter(hikeyword);

  if(id){
    hik := hikeyword.getId();
    if(!streq("say", hik)){
      id = 0;
    }
  }
  return id;
}

DefPrintRule: struct{}
DefPrintRule.parse := (c: *Compiler, s: *Source, pos: int) -> *ParseResult{
  idp := c.getIdParser();

  kw := idp.parse(c, s, pos);
  id := idp.parseAfter(kw);

  if(id){
    k := kw.getId();
    if(!streq(k, "DefPrint")){
      id = 0;
    }
  }

  return id;
}
DefPrintRule.genAST := (c: *Compiler, token: *ParseResult) -> *C_AST{
  m := c.createFunction();

  tid : *CP_IdParser_ParseResult = token;
  tname : *u8 = tid.getId();

  m.setId(strcat(tname, "$print"));
  m.setReturntype(c.createPrimitiveType("unit"));

  st := c.getStruct(tname);

  ps := c.createFCallStmt();
  ps.setId("printf");
  cs := c.createCString();
  cs.setValue(strcat("> ", tname));
  ps.addArg(cs);
  m.addStmt(ps);

  i := 0;
  while(st.getMember(i)){
    mem := st.getMember(i);
    printf("Member %d has name %s\n", i, mem.getId());
    i = i + 1;

    if(streq(mem.getId(), "name")){
        ps := c.createFCallStmt();
        ps.setId("printf");
        cs := c.createCString();
        cs.setValue("\n  - %s : %s");
        ps.addArg(cs); // printf("....")

        cs2 := c.createCString();
        cs2.setValue(mem.getId());
        ps.addArg(cs2); // printf("....", "...")

        v_self := c.createVariableValue("self");
        ma := c.createMemAccess(v_self, mem.getId());
        ps.addArg(ma);

        m.addStmt(ps);
    } else {
        ps := c.createFCallStmt();
        ps.setId("printf");
        cs := c.createCString();
        cs.setValue("\n  - %s : %d");
        ps.addArg(cs); // printf("....")

        cs2 := c.createCString();
        cs2.setValue(mem.getId());
        ps.addArg(cs2); // printf("....", "...")

        v_self := c.createVariableValue("self");
        ma := c.createMemAccess(v_self, mem.getId());
        ps.addArg(ma);

        m.addStmt(ps);
    }
  }

  ps2 := c.createFCallStmt();
  ps2.setId("printf");
  cs2 := c.createCString();
  cs2.setValue("\n");
  ps2.addArg(cs2);

  m.addStmt(ps2);

  rs := c.createReturn(0);
  m.addStmt(rs);

  method := c.createMethod(tname, "print", m);

  return method;
}

