
printf := (T: string, s: ...any)->void;

main := ()->int{
  a : int[2];
  a[0] = 1;
  a[1] = 2;
  printf("a[0]=%d\n", a[0]);
  printf("a[1]=%d\n", a[1]);

  b : *int;
  b = &a[0];

  b = a; // This should be possible
  d := b + 1; // This should be possible

  *b = 3;
  *d = 4;

  printf("a[0]=%d\n", a[0]);
  printf("a[1]=%d\n", a[1]);

  *(d-1) = 5; // Maybe?
  *(b+1) = 6; // This too should be possible

  printf("a[0]=%d\n", a[0]);
  printf("a[1]=%d\n", a[1]);

  return 0;
}